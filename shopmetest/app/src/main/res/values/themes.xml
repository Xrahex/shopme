<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Shopmetest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#005EFF</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Dark mode -->
    <!-- Screen background if light mode -->
    <style name="SCREEN">
        <item name="android:background">#2B2B2B</item>
    </style>
    <!-- Texts background if light mode -->
    <style name="TEXT">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <!-- Button background if light mode -->
    <style name="BUTTON">
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">3dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="cornerRadius">300dp</item>

    </style>
</resources>