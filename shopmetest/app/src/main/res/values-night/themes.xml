<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Shopmetest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Light mode -->
    <!-- Screen background if dark mode -->
    <style name="SCREEN">
        <item name="android:background">#FFF</item>
    </style>
    <!-- Texts background if dark mode -->
    <style name="TEXT">
        <item name="android:textColor">#000</item>
    </style>
    <!-- Button background if dark mode -->
    <style name="BUTTON">
        <item name="strokeColor">#FFFFFF</item>
        <item name="strokeWidth">3dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="cornerRadius">300dp</item>
    </style>


</resources>